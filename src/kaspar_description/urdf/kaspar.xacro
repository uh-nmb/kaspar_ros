	<xacro:arm_v0 name="arm_l" parent="torso_arm_l">
		<origin rpy="0 0 0" xyz="0 0 0" />
	</xacro:arm_v0>
	<xacro:hand_v0 name="hand_l" parent="torso_arm_l_hand">
