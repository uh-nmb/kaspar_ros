	<xacro:neck_v0 name="neck" parent="torso_top">
		<origin rpy="0 0 0" xyz="0 0 0" />
	</xacro:neck_v0>
	<xacro:head_v0 name="head" parent="neck_top">
		<origin rpy="0 0 0" xyz="0 0 0" />
	</xacro:head_v0> -->
</robot>
